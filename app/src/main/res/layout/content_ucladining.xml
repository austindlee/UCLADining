<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ucladining"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.austindlee.ucladining.UCLADining"
    tools:showIn="@layout/activity_ucladining"
    android:background="@drawable/uclapic3"
    >

    <!--   android:textColorLink="?android:attr/colorPrimary" -->

    <Button
        android:typeface="monospace"
        android:text="hours"
        android:onClick="goToHours"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:background="@drawable/button_transparent"
        android:textSize="24sp"
        android:layout_width="200dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/swipeCountBtn"
        android:layout_alignStart="@+id/swipeCountBtn" />

    <Button
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:background="@drawable/button_transparent"
        android:onClick="goToMenus"
        android:text="Menus"
        android:layout_height="60dp"
        android:id="@+id/button"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/swipeCountBtn"
        android:layout_alignLeft="@+id/swipeCountBtn"
        android:layout_alignStart="@+id/swipeCountBtn" />

    <Button
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:background="@drawable/button_transparent"
        android:text="Swipes"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/swipeCountBtn"
        android:textSize="24sp"
        android:textAlignment="gravity"
        android:onClick="goToSwipes"

        android:layout_marginBottom="15dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:typeface="normal"
        android:text="UCLA Dining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textSize="50sp"
        android:textStyle="normal|bold|italic"
        android:textColor="#ffffff"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
