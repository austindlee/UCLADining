<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_swipes_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.austindlee.ucladining.SwipesPage"
    android:background="@drawable/uclapic"
    >

    <Button
        android:onClick="click14R"
        android:textColor="#ffffff"
        android:background="@drawable/button_transparent"
        android:textSize="24sp"
        android:text="14 R"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn14R"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn19R"
        android:layout_alignStart="@+id/btn19R" />

    <Button
        android:onClick="click19P"
        android:textColor="#ffffff"
        android:background="@drawable/button_transparent"
        android:textSize="24sp"
        android:text="19 P"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn19P"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btn14P"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="click14P"
        android:textColor="#ffffff"
        android:background="@drawable/button_transparent"
        android:textSize="24sp"
        android:text="14 P"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn14P"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/btn19R"
        android:layout_alignLeft="@+id/btn19P"
        android:layout_alignStart="@+id/btn19P" />

    <Button
        android:onClick="click19R"
        android:textColor="#ffffff"
        android:background="@drawable/button_transparent"
        android:textSize="24sp"
        android:text="19 R"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn19R"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btn14R"
        android:layout_alignLeft="@+id/btn14P"
        android:layout_alignStart="@+id/btn14P" />

    <TextView
        android:text="---"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:textSize="150dp"
        android:id="@+id/swipesLeftTxt"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/darker_gray"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
